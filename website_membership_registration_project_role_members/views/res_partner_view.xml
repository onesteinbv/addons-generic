<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="website_membership_registration_view_partner_form" model="ir.ui.view">
        <field name="inherit_id" ref="website_membership_registration.view_partner_form" />
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='website_description']" position="replace"/>
        </field>
    </record>

    <record id="view_partner_form" model="ir.ui.view">
        <field name="inherit_id" ref="website_project_role_members.view_partner_form" />
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='website_description']" position="attributes">
                <attribute name="string">Website Member Description/Bio</attribute>
            </xpath>
        </field>
    </record>
</odoo>
