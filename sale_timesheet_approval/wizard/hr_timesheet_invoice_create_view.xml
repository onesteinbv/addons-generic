<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_hr_timesheet_invoice_create" model="ir.ui.view">
        <field name="model">hr.timesheet.invoice.create</field>
        <field name="arch" type="xml">
            <form>
               <group>
                   <group string="Do you want to approve (and make invoiceable) the selected timesheet lines?">
                   </group>
                   <group name="extra_options">
                   </group>
               </group>
                <footer>
                    <button name="do_create" string="Approve and Create Invoices" type="object" class="oe_highlight"/>
                    <button name="do_approve" string="Approve" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="hr_timesheet_invoice_create_values" model="ir.actions.act_window">
        <field name="name">Approve</field>
        <field name="res_model">hr.timesheet.invoice.create</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="analytic.model_account_analytic_line"/>
        <field name="binding_view_types">list</field>
        <field name="groups_id" eval="[(4, ref('hr_timesheet.group_timesheet_manager'))]"/>
    </record>

</odoo>
