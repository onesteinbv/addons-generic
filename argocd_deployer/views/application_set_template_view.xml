<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="application_set_template_form" model="ir.ui.view">
        <field name="model">argocd.application.set.template</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="yaml" widget="ace" />
                        <field name="active" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="application_set_template_tree" model="ir.ui.view">
        <field name="model">argocd.application.template</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
            </tree>
        </field>
    </record>

    <record id="application_set_template_action" model="ir.actions.act_window">
        <field name="name">Application Set Templates</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">argocd.application.set.template</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
