<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">
    <record id="deployment_mail_template" model="mail.template">
        <field name="name">ArgoCD: Deployment Notification (for partner)</field>
        <field name="model_id" ref="argocd_deployer.model_argocd_application" />
        <field name="subject">Application deployment</field>
        <field name="email_from">{{ object.partner_id.company_id.email }}</field>
        <field name="partner_to">{{ object.partner_id.id }}</field>
        <field name="email_to">{{ object.partner_id.email }}</field>
        <field name="body_html" type="html">
            <p>Dear <t t-esc="object.partner_id.name" />, </p>
            <br />
            <p>Your application has been deployed.</p>
            <br />
            <p>Kind regards, </p>
        </field>
    </record>

    <record id="redeployment_mail_template" model="mail.template">
        <field name="name">ArgoCD: Redeployment Notification (for partner)</field>
        <field name="model_id" ref="argocd_deployer.model_argocd_application" />
        <field name="subject">Application redeployment</field>
        <field name="email_from">{{ object.partner_id.company_id.email }}</field>
        <field name="partner_to">{{ object.partner_id.id }}</field>
        <field name="email_to">{{ object.partner_id.email }}</field>
        <field name="body_html" type="html">
            <p>Dear <t t-esc="object.partner_id.name" />, </p>
            <br />
            <p>There's change to your application deployed.</p>
            <br />
            <p>Kind regards, </p>
        </field>
    </record>
</odoo>
