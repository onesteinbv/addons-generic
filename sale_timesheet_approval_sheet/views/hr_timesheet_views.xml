<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_timesheet_line_tree" model="ir.ui.view">
        <field name="name">account.analytic.line.tree</field>
        <field name="model">account.analytic.line</field>
        <field name="inherit_id" ref="hr_timesheet.hr_timesheet_line_tree" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='unit_amount']" position="after">
                <field name="sheet_id" readonly="1" />
                <field name="sheet_state" />
            </xpath>
        </field>
    </record>

    <record id="sale_timesheet_approval.timesheet_action_not_approved" model="ir.actions.act_window">
        <field name="domain">[('project_id', '!=', False),('is_approved', '=', False),('sheet_state', 'in', ['done']),('timesheet_invoice_id','=',False)]</field>
    </record>

</odoo>
